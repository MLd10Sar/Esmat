<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <!-- Change Password Row -->
        <TextView
            android:id="@+id/tvChangePassword"
            style="@style/SettingsItemStyle"
            android:text="تغییر رمز عبور"
            app:drawableStartCompat="@drawable/ic_lock"
            android:drawablePadding="16dp"/>

        <View style="@style/DashboardDivider" android:layout_marginHorizontal="16dp"/>

        <!-- Backup Data Row -->
        <TextView
            android:id="@+id/tvBackupData"
            style="@style/SettingsItemStyle"
            android:text="تهیه نسخه پشتیبان (بکاپ)"
            app:drawableStartCompat="@drawable/ic_backup"
            android:drawablePadding="16dp"/>

        <!-- Last Backup Status -->
        <TextView
            android:id="@+id/tvLastBackupStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:gravity="start"
            android:textAppearance="?attr/textAppearanceCaption"
            tools:text="آخرین بکاپ: امروز ساعت ۱۰ صبح"/>

        <View style="@style/DashboardDivider" android:layout_marginHorizontal="16dp"/>

        <!-- Restore Data Row -->
        <TextView
            android:id="@+id/tvRestoreData"
            style="@style/SettingsItemStyle"
            android:text="بازیابی اطلاعات از بکاپ"
            app:drawableStartCompat="@drawable/ic_restore"
            android:drawablePadding="16dp"/>

        <View style="@style/DashboardDivider" android:layout_marginHorizontal="16dp"/>



        <!-- About App Row -->
        <TextView
            android:id="@+id/tvAboutApp"
            style="@style/SettingsItemStyle"
            android:text="@string/about_app_title"
            app:drawableStartCompat="@drawable/ic_info"
            android:drawablePadding="16dp"/>

        <View style="@style/DashboardDivider" android:layout_marginHorizontal="16dp"/>

    </LinearLayout>
</ScrollView>