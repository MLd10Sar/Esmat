<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"> <!-- Reduced base padding for card margins -->

        <!-- Account Section -->
        <TextView
            style="@style/SettingsHeader"
            android:text="@string/settings_header_account" />
        <com.google.android.material.card.MaterialCardView
            style="@style/SettingsCardStyle">
            <LinearLayout
                android:id="@+id/tvChangePassword"
                style="@style/SettingsCardRowStyle">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    app:tint="?attr/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="تغییر رمز عبور"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Display & Business Section Card -->
        <TextView
            style="@style/SettingsHeader"
            android:text="عمومی" />
        <com.google.android.material.card.MaterialCardView
            style="@style/SettingsCardStyle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Date Format Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نمایش تاریخ"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>
                    <RadioGroup
                        android:id="@+id/rgDateFormat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <RadioButton
                            android:id="@+id/rbGregorian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="میلادی"/>
                        <RadioButton
                            android:id="@+id/rbShamsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="شمسی"/>
                    </RadioGroup>
                </LinearLayout>

                <View style="@style/DashboardDivider" android:layout_marginHorizontal="16dp"/>

                <!-- Shop Info Row -->
                <LinearLayout
                    android:id="@+id/tvEditShopInfo"
                    style="@style/SettingsCardRowStyle">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_store"
                        app:tint="?attr/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="ویرایش معلومات دکان"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Data & Support Section Card -->
        <TextView
            style="@style/SettingsHeader"
            android:text="معلومات و پشتیبانی" />
        <com.google.android.material.card.MaterialCardView
            style="@style/SettingsCardStyle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Backup Row -->
                <LinearLayout
                    android:id="@+id/tvBackupData"
                    style="@style/SettingsCardRowStyle">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_backup"
                        app:tint="?attr/colorPrimary"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تهیه نسخه پشتیبان (بکاپ)"
                            android:textAppearance="?attr/textAppearanceBodyLarge"/>
                        <TextView
                            android:id="@+id/tvLastBackupStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceCaption"
                            tools:text="آخرین بکاپ: امروز"/>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/DashboardDivider" android:layout_marginHorizontal="16dp"/>

                <!-- Restore Row -->
                <LinearLayout
                    android:id="@+id/tvRestoreData"
                    style="@style/SettingsCardRowStyle">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_restore"
                        app:tint="?attr/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="بازیابی اطلاعات از بکاپ"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>
                </LinearLayout>
                <View style="@style/DashboardDivider" android:layout_marginHorizontal="16dp"/>

                <!-- About Row -->
                <LinearLayout
                    android:id="@+id/tvAboutApp"
                    style="@style/SettingsCardRowStyle">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="?attr/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/about_app_title"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>