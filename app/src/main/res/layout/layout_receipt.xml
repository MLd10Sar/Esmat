<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- The main receipt content -->
    <LinearLayout
        android:id="@+id/mainReceiptLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layoutDirection="rtl">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imgShopLogo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:visibility="gone"
                tools:src="@mipmap/ic_launcher"
                tools:visibility="visible"
                android:contentDescription="لوگوی دکان"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:id="@+id/tvShopNameReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="نام دکان"/>
                <TextView
                    android:id="@+id/tvShopAddressReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#444444"
                    android:textSize="12sp"
                    tools:text="آدرس دکان"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvReceiptTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="رسید"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#eee" android:layout_marginVertical="16dp"/>

        <!-- Details Section -->
        <LinearLayout
            android:id="@+id/layoutCustomerReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="برای محترم: "
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvCustomerReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                tools:text="احمد محمودی"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاریخ: "
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvDateReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                tools:text="۲۶ ثور ۱۴۰۳"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نمبر معامله: "
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTransactionIdReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                tools:text="#105"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#eee" android:layout_marginVertical="16dp"/>

        <!-- Table Header -->
        <LinearLayout
            android:id="@+id/layoutTableHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="شرح"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="تعداد"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="قیمت"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="end"
                android:text="مجموع"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Table Row -->
        <LinearLayout
            android:id="@+id/layoutTransactionDetailsReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tvDescriptionReceipt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="کتاب"/>
            <TextView
                android:id="@+id/tvQuantityReceipt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="5"/>
            <TextView
                android:id="@+id/tvUnitPriceReceipt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="200.00"/>
            <TextView
                android:id="@+id/tvRowTotalReceipt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="1,000.00"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#eee" android:layout_marginVertical="16dp"/>

        <!-- Totals Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="مبلغ مجموعی:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvAmountReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="2,500.00 AFN"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutStatusReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="وضعیت:"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvStatusReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="باقی"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRemainingAmountReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/labelRemainingAmountReceipt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="مبلغ باقی مانده:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvRemainingAmountReceipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/negative_red"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="2,500.00 AFN"/>
        </LinearLayout>

        <!-- Footer with QR Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvFooterText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تشکر از همکاری شما!\nاین رسید توسط اپلیکیشن روزنامچه ساخته شده."
                android:textSize="10sp"
                android:textColor="#555"/>
            <ImageView
                android:id="@+id/imgQrCode"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- The Watermark TextView - sits on top of everything -->
    <TextView
        android:id="@+id/tvWatermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="پرداخت شد"
        android:textSize="72sp"
        android:textStyle="bold"
        android:textColor="#304CAF50"
        android:rotation="-35"
        android:visibility="gone"
        tools:visibility="visible"/>

</FrameLayout>